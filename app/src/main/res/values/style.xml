<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="listText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/listText</item>
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
        <item name="android:layout_margin">@dimen/separation_margin</item>
    </style>

    <style name="listText_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/listText</item>
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
        <item name="android:layout_margin">@dimen/separation_margin</item>
    </style>

    <style name="titleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/titleText</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
    </style>

    <style name="textViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:textSize">@dimen/textViews</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
    </style>

    <style name="constraints">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">12</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_button</item>
        <item name="android:textSize">@dimen/buttonText</item>
    </style>

</resources>