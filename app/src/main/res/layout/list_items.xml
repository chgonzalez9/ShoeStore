<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/shoeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shoeName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nameAnswer"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/shoeName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/shoeName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shoeCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shoeCompany"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/companyAnswer"
            app:layout_constraintTop_toBottomOf="@id/shoeName" />

        <TextView
            android:id="@+id/companyAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/shoeCompany"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/shoeCompany"
            app:layout_constraintTop_toBottomOf="@id/nameAnswer" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>